%h1 Listing sessions

- if @twitter.length > 0
  %h2 Listing tweets
  %ul
    - @twitter.each do |tweet|
      %li #{tweet}

%table
  %tr
    %th Description
    %th Short url
    %th Author
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td= post.description
      %td= post.short_url
      %td= post.user.nickname
      %td= link_to 'Show', post
      %td= link_to 'Edit', edit_post_path(post)
      %td= link_to 'Destroy', post, :data => { :confirm => 'Are you sure?' }, :method => :delete

%br

= link_to 'Sesh now!', new_post_path, :class => "btn btn-primary"
